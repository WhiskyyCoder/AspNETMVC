@model SimpleBlog.DAO.Author
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Share/_Layout_Main.cshtml";
    ViewBag.Active = "";
}


<div class="container">

    <div class="row">
        <h1>Zaloguj się</h1>
        <hr>
        <div class="col-md-8">
            @if (TempData["Message"] != null)
            {
                <span style="color:red;">@TempData["Message"].ToString()</span>
            }
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <div class="form-group">
                    @Html.Label("Podaj login:")
                    @Html.TextBoxFor(model => model.Username, new { @class = "form-control", @placeholder = "Podaj login" })
                    @Html.ValidationMessageFor(model => model.Username)
                </div>
                <div class="form-group">
                    @Html.Label("Podaj hasło:")
                    @Html.TextBoxFor(model => model.Pass, new { @class = "form-control", @type = "password" })
                    @Html.ValidationMessageFor(model => model.Pass)
                </div>

                <button type="submit" class="btn btn-primary">Zaloguj się</button>
            }
        </div>
    </div>





    </div>




